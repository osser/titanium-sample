<Alloy>
	<Window class="container" title="Window Standalone">
		<RightNavButton platform="ios">
			<Button image="common/allsize/cmd16.png" onClick="btnRight_click" />
		</RightNavButton>
		<View>
			<Button id="btnOpenPlain" onClick="btnOpenPlain_click">
				Open(Plain)
			</Button>
			<Button id="btnTraditionalModel" onClick="btnTraditionalModel_click">
				Traditional Modal
			</Button>
			<Button id="btnOpenAnimationFun"  onClick="btnOpenAnimationFun_click" platform="ios">
				Open(Animation Fun)
			</Button>
			<Button id="btnOpenNavBarVisible" onClick="btnOpenNavBarVisible_click" platform="ios">
				Open(Nav Bar Visible)
			</Button>
			<Button id="btnOpenFullScreen" onClick="btnOpenFullScreen_click">
				Open(FullScreen)
			</Button>
			<Button id="btnOpenToolbar" onClick="btnOpenToolbar_click" platform="ios">
				Open(Toolbar)
			</Button>
		</View>
		<Toolbar platform="ios" bottom="0" tintColor="silver" barColor="#603cba">
			<Items>
				<Button id="btnOpenWin1" onClick="btnOpenWin1_click" title="OpenWin1" />
				<FlexSpace />
				<Button id="btnOpenWin2" onClick="btnOpenWin2_click" title="OpenWin2" />
				<FlexSpace />
				<Button id="btnOpenWin3" onClick="btnOpenWin3_click" title="OpenWin3" systemButton="CAMERA"/>
			</Items>
		</Toolbar>
	</Window>
</Alloy>