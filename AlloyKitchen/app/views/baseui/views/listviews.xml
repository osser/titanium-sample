<Alloy>
	<Window class="container" title="ListViews">
		<RightNavButton platform="ios">
			<Button image="common/allsize/cmd16.png" onClick="showSource" />
		</RightNavButton>
		<Menu platform="android">
			<MenuItem title="Source" icon="common/allsize/cmd16.png" onClick="showSource" />
		</Menu>
		<ListView headerTitle="This is a list view too." separatorColor="#00a300" onItemclick="lv_itemclick">
			<ListSection headerTitle="Basic Functions">
				<ListItem title="Build in templates" formid="list_basic" />
				<ListItem title="Customize Build in templates" formid="list_basic_customize" />
				<ListItem title="Background Colors&Scroll Indicator" formid="list_background_color" />
				<ListItem title="Headers and Footers" formid="list_headers_footers" />
				<ListItem title="Row Height" formid="list_row_height" />
				<ListItem title="Default Template" formid="list_deftemplate" />
				<ListItem title="Scroll To" formid="list_scrollto" />
				<ListItem title="Section Style" formid="list_selection_style" platform="ios" />
				<ListItem title="Scroll Indicator Style" formid="list_scroll_style" platform="ios" />
				<ListItem title="Allow Selection Behavior" formid="list_selection" platform="ios" />
				<ListItem title="Keyboard Behavior" formid="list_kb" platform="ios" />
			</ListSection>
			<ListSection headerTitle="List API - Section Management">
				<ListItem title="Append Section" formid="list_sectionappend" />
				<ListItem title="Delete Section" formid="list_sectiondelete" />
				<ListItem title="Insert Section" formid="list_sectioninsert" />
				<ListItem title="Replace Section" formid="list_sectionreplace" />
			</ListSection>
			<ListSection headerTitle="Section API - Item Management">
				<ListItem title="Set Items" formid="list_itemsset" />
				<ListItem title="Append Items" formid="list_itemsappend" />
				<ListItem title="Insert Items" formid="list_itemsinsert" />
				<ListItem title="Replace Items" formid="list_itemsreplace" />
				<ListItem title="Delete Items" formid="list_itemsdelete" />
				<ListItem title="Update Items" formid="list_itemsupdate" />
				<ListItem title="Get Items (otherData)" formid="list_itemsget" />
			</ListSection>
			<ListSection headerTitle="List View eventing. Run in order">
				<ListItem title="Sanity Check" />
				<ListItem title="Event Bubbling" />
				<ListItem title="Child Events" />
				<ListItem title="itemclick + child click" />
			</ListSection>
			<ListSection headerTitle="List View Performance">
				<ListItem title="Remote Images in ListView" />
				<ListItem title="Contacts" />
			</ListSection>
			<ListSection headerTitle="V2 UI Enhancements">
				<ListItem title="Item Separrators" />
				<ListItem title="Custom Headers&Footers" />
				<ListItem title="Custom Backgrounds" />
				<ListItem title="Select & Deselect Item" platform="ios" />
				<ListItem title="Misc UI" platform="ios" />
				<ListItem title="Pull View" platform="ios" />
			</ListSection>
			<ListSection headerTitle="V2 Editing Support" platform="ios">
				<ListItem title="Delete Rows" />
				<ListItem title="Recorder Rows" />
			</ListSection>
			<ListSection headerTitle="V2 Search & Index Support">
				<ListItem title="Basic Search (searchView)" />
				<ListItem title="New Search API (searchText)" />
				<ListItem title="Fun with searchText" platform="ios" />
				<ListItem title="Index Bar (sectionIndex Titles)" platform="ios" />
			</ListSection>
		</ListView>
	</Window>
</Alloy>