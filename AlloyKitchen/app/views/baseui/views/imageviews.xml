<Alloy>
	<Window class="container" title="ImageViews">
		<RightNavButton platform="ios">
			<Button image="common/allsize/cmd16.png" onClick="showSource" />
		</RightNavButton>
		<Menu platform="android">
			<MenuItem title="Source" icon="common/allsize/cmd16.png" onClick="showSource" />
		</Menu>
		<ListView onItemclick="listView_itemclick">
			<ListSection headerTitle="List">
				<ListItem title="Basic" formid="image_view_basic" />
				<ListItem title="Image File" formid="image_view_file" />
				<ListItem title="Remote Image" formid="image_view_remote" />
				<ListItem title="Image Scaling" formid="image_view_scaling" />
				<ListItem title="Image View Positioning" formid="image_view_positioning" />
				<ListItem title="Animated" formid="image_view_animated" backgroundColor="lightgray" />
				<ListItem title="Image View Encoding" formid="image_view_encoding" />
				<ListItem title="Image Blob" formid="image_view_blob" platform="ios" />
				<ListItem title="Image Masking" formid="image_mask" platform="ios" />
				<ListItem title="Image Toolbar" formid="image_view_toolbar" platform="ios" />
				<ListItem title="Image Rapid Update" formid="image_view_updateimages" />
				<ListItem title="Android drawable resource" formid="image_view_resource" platform="android" />
			</ListSection>
		</ListView>
	</Window>
</Alloy>