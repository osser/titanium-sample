<Alloy>
	<Window class="container" title="Scrolling Drag Start&End">
		<RightNavButton platform="ios">
			<Button image="common/allsize/cmd16.png" onClick="showSource" />
		</RightNavButton>
		<Menu platform="android">
			<MenuItem title="Source" icon="common/allsize/cmd16.png" onClick="showSource" />
		</Menu>
		<ScrollView id="scrollView" onDragstart="scrollView_dragstart" onDragend="scrollView_dragend">
			<Label id="label1"></Label>
			<Label id="label2"></Label>
		</ScrollView>
		<View id="messageView">
			<Label id="message1"></Label>
			<Label id="message2"></Label>
		</View>
	</Window>
</Alloy>