<Alloy>
	<Window id="frmWin" class="container" title="Remote Images in ListView">
		<RightNavButton platform="ios">
			<Button image="common/allsize/cmd16.png" onClick="showSource" />
		</RightNavButton>
		<Menu platform="android">
			<MenuItem title="Source" icon="common/allsize/cmd16.png" onClick="showSource" />
		</Menu>
		<Label id="lblInfo" />
		<Button id="btnShowMe" title="Show Me" onClick="btnShowMe_click" />
		<ListView id="listView" visible="false" defaultItemTemplate="template">
			<Templates>
				<ItemTemplate name="template" height="60" backgroundColor="black">
					<ImageView bindId="avatar" class="avatar"></ImageView>
					<Label bindId="info" class="info"></Label>
				</ItemTemplate>
			</Templates>
			<ListSection id="section0" headerTitle="A bunch of remote images" />
		</ListView>
	</Window>
</Alloy>