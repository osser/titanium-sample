<Alloy>
	<Window class="container" title="Window Layout">
		<RightNavButton platform="ios">
			<Button image="common/allsize/cmd16.png" onClick="showSource" />
		</RightNavButton>
		<Menu platform="android">
			<MenuItem title="Source" icon="common/allsize/cmd16.png" onClick="showSource" />
		</Menu>
		<View onClick="view_click">
			<Label>
				First Name
			</Label>
			<TextField id="txtFirstName" onClick="txtFirstName_click">
			</TextField>
			<Label>
				Last Name
			</Label>
			<TextField id="txtLastName" onClick="txtLastName_click">
			</TextField>
			<Button id="btnSave" onClick="btnSave_click">
				Save my Information
			</Button>
		</View>
		<View id="viewToaster">
			<Label id="lblToaster">
				Register for a free toaster!
			</Label>
		</View>
	</Window>
</Alloy>