<Alloy>
	<Window title="Base UI" class="container">
		<RightNavButton platform="ios">
			<Button image="common/allsize/cmd16.png" onClick="showSource" />
		</RightNavButton>
		<Menu platform="android">
			<MenuItem title="Source" icon="common/allsize/cmd16.png" onClick="showSource" />
		</Menu>
		<ListView onItemclick="lv_itemclick" separatorColor="#eff4ff">
			<ListSection>
				<ListItem title="Tab Groups" formid="tabgroups" />
				<ListItem title="Window Properties" formid="windowproperties" />
				<ListItem title="Window Layout" formid="windowlayout" />
				<ListItem title="Window(Standalone)" formid="windowstandalone" />
				<ListItem title="Views" formid="views" />
				<ListItem title="Custom Events" />
				<ListItem title="Window Events" />
				<ListItem title="Vertical Layout" />
				<ListItem title="Horizontal Layout" />
				<ListItem title="Tabs" platform="ios" />
				<ListItem title="Window NavBar" platform="ios" />
				<ListItem title="Window Toolbar" platform="ios" />
				<ListItem title="Window Constructor" platform="ios" />
				<ListItem title="Animation" platform="ios" />
				<ListItem title="Modal Windows" platform="ios" />
				<ListItem title="Custom Fonts" platform="ios" />
				<ListItem title="Preferences" platform="android" />
				<ListItem title="Hide Soft Keyboard" platform="android" />
				<ListItem title="Window Soft Input" platform="android" />
				<ListItem title="Menu" platform="android" />
			</ListSection>
		</ListView>
	</Window>
</Alloy>